@page "/men"

@using BlazorWebshop.Data
@using System.Drawing
@inject ImageService ImgService

<h1>Men's Clothes</h1>
<div class="row">
    @foreach (var image in _images)
    {
        <div class="column">
            <img src=@image.Path asp-append-version="true" @onclick="imgClicked"/>
            <label>@image.Name</label>
        </div>
    }
</div>

@code{
    List<Img> _images;
    protected override async Task OnInitializedAsync()
    {
        _images = await ImgService.getImages();
    }

    public void imgClicked(){
        Console.WriteLine("Img was clicked");
    }
}